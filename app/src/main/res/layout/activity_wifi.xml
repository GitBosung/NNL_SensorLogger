<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/wifiStrengthTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="와이파이 세기: 0 Hz"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="기기의 Document 폴더에 저장되고 있습니다. (wifi_strenght_log.txt)" />

    <TextView
        android:id="@+id/wifiNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wifiStrengthTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="와이파이 이름: "
        android:textSize="18sp" />

</LinearLayout>